{
  "name": "YaaniMail Turkcell Chrome Extension",
  "description": "YaaniMail Turkcell Chrome Extension",
  "version": "1.1",
  "manifest_version": 3,
  "host_permissions": ["https://ymapi.turkcell.com.tr/*"],
  "permissions": ["storage", "alarms"],
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "logo-minimized.png",
    "48": "logo-minimized.png",
    "128": "logo-minimized.png"
  }
}
